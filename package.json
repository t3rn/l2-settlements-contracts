{
  "name": "guardian",
  "engines": {
    "pnpm": ">=9.0.0 <10.0.0"
  },
  "scripts": {
    "preinstall": "npm exec -- only-allow pnpm",
    "precommit": "npm run fmtsol && npm run compile-contracts && npm run fmt && npm run compile",
    "clean": "rm -rf ./bin ./dist",
    "compile": "npm run clean && tsc --pretty --project ./tsconfig.json",
    "test": "NODE_ENV=tests pnpm test:contracts",
    "test:contracts": "NODE_ENV=tests hardhat test",
    "fmt": "prettier --write *.js test",
    "fmt:check": "prettier --check src scripts *.js",
    "coverage": "hardhat coverage",
    "solhint": "solhint 'contracts/**/*.sol'",
    "fmtsol": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "fmtsol:check": "prettier --check --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "lint": "eslint --ext .ts src",
    "lint:report": "eslint src --ext .ts --output-file eslint_report.json --format json",
    "compile-contracts": "hardhat compile",
    "deploy-contracts": "hardhat run scripts/deployContracts.js --network",
    "deploy-tokens": "hardhat run scripts/deploy-tokens.ts --network",
    "mint-tokens": "hardhat run scripts/mint-tokens.ts --network",
    "deploy-brn-sepolia": "hardhat run scripts/deployBRNtoArb.js --network arbitrum-sepolia",
    "switch-rewards-on-l3": "hardhat run scripts/proxy/rewards-switch-on-l3.ts --network ",
    "switch-rewards-off-l3": "hardhat run scripts/proxy/rewards-switch-off-l3.ts --network ",
    "reset-committee-hash": "hardhat run scripts/proxy/reset-committee-hash.ts --network ",
    "configure-orderbook-l3": "hardhat run scripts/proxy/configure-orderbook-l3.ts --network ",
    "deploy-brn-l3": "hardhat run scripts/deployBRNtoL3.js --network l0rn",
    "deploy-trn-l3": "hardhat run scripts/deployTRNtoL3.js --network l0rn",
    "deploy-gas-token": "hardhat run scripts/deployGasToken.js --network",
    "sendOrder": "hardhat run scripts/remoteOrder.ts --network",
    "sendCurrency": "hardhat run scripts/sendCurrency.js --network",
    "claimBatch": "hardhat run scripts/claimBatch.js --network",
    "localSubmitOrder": "hardhat run scripts/localSubmitOrder.js --network",
    "fetchPastEvents": "hardhat run scripts/fetch-past-events.ts --network",
    "fetchTxReceipt": "hardhat run scripts/fetch-tx-receipt.ts --network",
    "proxy-deploy": "hardhat run scripts/proxy/deploy.ts --network",
    "proxy-upgrade": "hardhat run scripts/proxy/upgrade.ts --network",
    "proxy-interact": "hardhat run scripts/proxy/interact.ts --network",
    "proxy-setup-defaults": "hardhat run scripts/proxy/setup-defaults.ts --network",
    "proxy-deploy-l3": "hardhat run scripts/proxy/deploy-l3.ts --network",
    "proxy-upgrade-l3": "hardhat run scripts/proxy/upgrade-l3.ts --network",
    "proxy-interact-l3": "hardhat run scripts/proxy/interact-l3.ts --network",
    "proxy-sync-batch-index-l3": "hardhat run scripts/proxy/sync-batch-index.ts --network",
    "xdns-set": "hardhat run scripts/xdns/set.ts --network",
    "xdns-get": "hardhat run scripts/xdns/get.ts --network",
    "generate-wallet": "ts-node scripts/generate-wallet.ts"
  },
  "dependencies": {
    "@heyputer/kv.js": "^0.1.6",
    "@openzeppelin/merkle-tree": "^1.0.6",
    "@polkadot/api": "^10.13.1",
    "@sentry/node": "^7.111.0",
    "@sentry/profiling-node": "^7.111.0",
    "@t3rn/pricer": "1.7.9",
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "crypto-convert": "^2.1.7",
    "dotenv": "^16.4.5",
    "env-var": "^7.4.1",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^5.7.2",
    "express": "^4.19.2",
    "lodash.merge": "^4.6.2",
    "moralis": "^2.26.1",
    "pino": "^8.20.0",
    "prom-client": "^15.1.2",
    "secp256k1": "^5.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/contracts": "^4.9.6",
    "@openzeppelin/contracts-upgradeable": "^4.9.6",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.14",
    "@types/chai-as-promised": "^7.1.8",
    "@types/express": "^4.17.21",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/lodash.merge": "^4.6.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.2",
    "chai": "^4.4.1",
    "chai-almost": "^1.0.1",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.4.0",
    "hardhat": "^2.22.3",
    "hardhat-gas-reporter": "^1.0.10",
    "husky": "^9.0.11",
    "lodash.clonedeep": "^4.5.0",
    "merkletreejs": "^0.3.11",
    "mocha": "^10.4.0",
    "pino-pretty": "^11.0.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1",
    "solhint-community": "3.7.0-rc02",
    "solidity-coverage": "^0.8.12",
    "supertest": "^6.3.4",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5"
  }
}
